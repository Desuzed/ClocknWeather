<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.MaterialAlertDialog.Base" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarPositiveButtonStyle">@style/AlertButton.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertButton</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
        <item name="fontFamily">@font/montserrat_regular_ru</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorSurface">@color/bgDetailLight</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="AlertButton.Base" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AlertButton.Positive.Base">
        <item name="cornerRadius">@dimen/corner_radius_16</item>
        <item name="android:textColor">@color/textNight</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_16</item>
    </style>
</resources>