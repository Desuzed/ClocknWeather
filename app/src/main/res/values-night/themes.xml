<resources>

    <style name="Theme.Everyweather" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/button_color_night</item>
        <item name="colorAccent">@color/gradientLightEnd</item>
        <item name="backgroundError">@color/errorNight</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/gradientNightEnd</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!--Splash screen theme-->

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@color/gradientNightEnd</item>
    </style>

    <!--Bottom Sheet Dialog Theme-->
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bg_bottom_sheet</item>
    </style>

</resources>