<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="08.09.2021"
        app:layout_constraintStart_toStartOf="@id/hDateHeader"
        app:layout_constraintTop_toBottomOf="@id/hDateHeader" />
    <TextView
        android:id="@+id/hTempHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hDate"
        app:layout_constraintTop_toBottomOf="@id/hDate" />

    <TextView
        android:id="@+id/hTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="100"
        app:layout_constraintStart_toStartOf="@id/hTempHeader"
        app:layout_constraintTop_toBottomOf="@id/hTempHeader" />

    <TextView
        android:id="@+id/hFeelsLikeHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feels Like:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hTemp"
        app:layout_constraintTop_toBottomOf="@id/hTemp" />

    <TextView
        android:id="@+id/hFeelsLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hFeelsLikeHeader"
        app:layout_constraintTop_toBottomOf="@id/hFeelsLikeHeader"
        tools:text="200" />

    <TextView
        android:id="@+id/hPressureHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pressure:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hFeelsLike"
        app:layout_constraintTop_toBottomOf="@id/hFeelsLike" />

    <TextView
        android:id="@+id/hPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hPressureHeader"
        app:layout_constraintTop_toBottomOf="@id/hPressureHeader"
        tools:text="90" />

    <TextView
        android:id="@+id/hHumidityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hPressure"
        app:layout_constraintTop_toBottomOf="@id/hPressure" />

    <TextView
        android:id="@+id/hHumidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hHumidityHeader"
        app:layout_constraintTop_toBottomOf="@id/hHumidityHeader"
        tools:text="77" />

    <TextView
        android:id="@+id/hWindSpeedHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind Speed:"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/hHumidity"
        app:layout_constraintTop_toBottomOf="@id/hHumidity" />

    <TextView
        android:id="@+id/hWindSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/hWindSpeedHeader"
        app:layout_constraintTop_toBottomOf="@id/hWindSpeedHeader"
        tools:text="33" />

</androidx.constraintlayout.widget.ConstraintLayout>