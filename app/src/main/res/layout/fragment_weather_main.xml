        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearWeather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">


            <TextView
                android:id="@+id/tvSaveLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#43000000"
                android:gravity="center"
                android:text="Save location"
                android:textSize="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:lines="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imgIcon"
                app:layout_constraintEnd_toEndOf="@+id/imgIcon"
                app:layout_constraintTop_toTopOf="@id/tvPlace"
                tools:text="07.08.20\n 06:20" />

            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:ellipsize="end"
                android:lines="1"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/tvDate"
                app:layout_constraintStart_toEndOf="@+id/tvDate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSaveLocation"
                tools:text=" bvcbvghj" />

            <TextView
                android:id="@+id/tvCurrentTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:textColor="@color/black"
                android:textSize="60dp"
                app:layout_constraintStart_toStartOf="@id/tvPlace"
                app:layout_constraintTop_toBottomOf="@+id/tvPlace"
                tools:text="28" />

            <TextView
                android:id="@+id/tvFeelsLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:lines="1"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/tvCurrentTemp"
                app:layout_constraintTop_toBottomOf="@id/tvCurrentTemp"
                tools:text="feels like 13" />

            <ImageView
                android:id="@+id/imgIcon"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginEnd="@dimen/margin_8"
                app:layout_constraintBottom_toBottomOf="@+id/tvCurrentTemp"
                app:layout_constraintEnd_toEndOf="parent" />


            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="@dimen/margin_8"
                android:lines="2"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvFeelsLike"
                app:layout_constraintTop_toTopOf="@+id/tvFeelsLike"
                tools:text="Облачно dgfgf g gfdg gfdgd gfdgg " />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHourly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDescription"
                tools:itemCount="1"
                tools:listitem="@layout/hour_item" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cvMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_8"
                android:backgroundTint="@color/teal_700"
                app:cardCornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rvHourly">

                <include
                    android:id="@+id/included_container"
                    layout="@layout/container_detailed_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </androidx.cardview.widget.CardView>

            <!--                <com.google.android.material.floatingactionbutton.FloatingActionButton-->
