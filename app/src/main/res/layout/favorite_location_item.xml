<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvFavoriteLocationName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:textSize="24sp"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Vologda" />

    <TextView
        android:id="@+id/tvFavoriteLocationRegionCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvFavoriteLocationName"
        app:layout_constraintStart_toStartOf="@id/tvFavoriteLocationName"
        app:layout_constraintTop_toBottomOf="@id/tvFavoriteLocationName"
        tools:text="Vologda, Russia" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_8"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tvFavoriteLocationRegionCountry" />
</androidx.constraintlayout.widget.ConstraintLayout>